<h2><%= @location.name %></h2>
<div class="row">
  <div class="col-md-4 category_card">
    <div class="thumbnail">
      <img src="<%= Location.yelp_image_name(@location) %>" alt="<%= @location.name %>">
      <div class="caption">
          <p><%= Location.address(@location) %></p>
        <p><%= button_to 'Save to Faves', favorites_path(id: @location.id, category: @category),
                                        {class: "btn btn-primary btn-xs"} %></p>
      </div>
    </div>
  </div>
</div>
