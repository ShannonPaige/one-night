<h2>Search Results</h2>
<div class="row">
  <% @locations.each_with_index do |(category, location), index| %>
    <div class="col-md-2">
      <div class="thumbnail">
        <% if category == :Event %>
          <img src="<%= location["logo"]["url"] %>" alt="<%= location["name"]["text"] %>">
        <% else %>
          <img src="<%= location.image_url %>" alt="<%= location.name %>">
        <% end %>
        <div class="caption">
          <% if category == :Event %>
            <h5>Event:</h5>
            <h4><%= location["name"]["text"] %></h4>

            <p><a href="#" class="btn btn-primary btn-xs" role="button">Learn More</a></p>
            <p><a href="#" class="btn btn-primary btn-xs" role="button">Save to Faves</a></p>
          <% else %>
            <h5><%= "#{category}:" %></h5>
            <h4><%= location.name %></h4>
            <p><%= location.location.display_address.first %></p>
            <p><a href="#" class="btn btn-primary btn-xs" role="button">Learn More</a></p>
            <p><a href="#" class="btn btn-primary btn-xs" role="button">Save to Faves</a></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
